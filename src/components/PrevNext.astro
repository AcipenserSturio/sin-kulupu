---
interface Props {
    prev: string;
    next: string;
}

const { prev, next } = Astro.props;
---

<style>
    nav {
        width: 100%;
        padding: 10px 0px;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        text-align: center;
    }
    span:first-child {
        text-align: left;
    }
    span:last-child {
        text-align: right;
    }
</style>

<nav>
    <span>{prev ? <a href={"/" + prev}>« Previous</a> : ""}</span>
    <span><a href={"/"}>Index</a></span>
    <span>{next ? <a href={"/" + next}>Next »</a> : ""} </span>
</nav>
